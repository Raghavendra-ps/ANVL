# ANVL Central Hub Backend - Environment Variables
# Copy this file to .env and modify the values as needed

# Server configuration
PORT=8083
HOST=localhost

# Database configuration
DB_TYPE=postgres
DB_HOST=database
DB_PORT=5432
DB_NAME=anvil_db
DB_USER=anvil_user
DB_PASSWORD=CHANGE_ME_IN_ENV_FILE_A_RANDOM_SECRET
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_ACQUIRE_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=CHANGE_ME_IN_ENV_FILE_A_RANDOM_SECRET
JWT_EXPIRES_IN=24h

# Logging configuration
LOG_FILE=/var/log/anvil/hub.log
LOG_LEVEL=info
LOG_FORMAT=json

# Performance configuration
MAX_PAYLOAD_SIZE=50mb
REQUEST_TIMEOUT=30000

# Security configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Central Hub configuration
HUB_MAX_RETRIES=3
HUB_RETRY_DELAY=1000
HUB_BUFFER_MAX_SIZE=1000

# API configuration
API_VERSION=v1
ENABLE_SWAGGER=false

# Admin configuration
ADMIN_PASSWORD=CHANGE_ME_IN_ENV_FILE_A_RANDOM_SECRET