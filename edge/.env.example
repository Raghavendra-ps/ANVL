# ANVL Edge Node - Environment Variables
# Copy this file to .env and modify the values as needed

# Toll booth identifier
TOLL_BOOTH_ID=1

# Camera configuration (comma-separated)
CAMERA_IDS=main_camera,secondary_camera

# Frame sampling rate (FPS)
FPS=5

# Detection interval in seconds
DETECTION_INTERVAL=10

# OCR confidence threshold
OCR_THRESHOLD=0.8

# Logging configuration
LOG_FILE=/var/log/anvil/edge.log
LOG_LEVEL=info

# Inference pipeline configuration
INFERENCE_PIPELINE_URL=http://inference-pipeline:8082

# Network configuration
BUFFER_SIZE=10
OFFLINE_MODE=true

# Central hub configuration
CENTRAL_HUB_URL=http://hub-backend:8083
CENTRAL_HUB_API_KEY=CHANGE_ME_IN_ENV_FILE_A_RANDOM_SECRET

# Port for health checks
PORT=8081